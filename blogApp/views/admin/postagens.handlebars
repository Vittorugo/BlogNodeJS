<h2> Postagens: </h2>
<hr>
<a href="/admin/postagens/add"><button class="btn btn-info mt-2"> Nova postagem</button></a>


{{#each postagem}}

    <div class="card mt-4">
        <div class="card-body">

            <h4>{{titulo}}</h4>
            
            
            
            
            <p> Descrição: {{descricao}} </p>
            
            {{conteudo}} <br><br>
            
            <small> Data: {{data}} </small> <br>
            <small>Categoria: {{categoria.nome}}</small> <br>
            <a href="/admin/postagens/edit/{{_id}}"> <button class="btn btn-outline-info mt-4 md-5 btn-sm"> Editar </button></a>
            
            <form  action='/admin/postagens/deletar' method="POST" style="display: inline-block">

                <input type="hidden" name="id" value="{{_id}}"> <!-- Um campo oculto geralmente armazena o registro do banco de dados que precisa ser atualizado quando o formulário é enviado. -->
                <button type="submit" class="btn btn-outline-danger btn-sm md-5 mt-4"> Deletar </button>
            
            </form>

        </div>
    </div>




{{else}}

    <h4  class="mt-4" style="color: rgb(161, 158, 158)"> Nenhuma postagem feita! </h4>
{{/each}}