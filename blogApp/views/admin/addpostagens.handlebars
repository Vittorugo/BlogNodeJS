
{{#each falhas}}

    <div class="alert alert-danger alert-dismissible fade show">  {{texto}}  
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"> <span aria-hidden="true">&times;</span> </button>
    </div>
                    
{{else}}
                
{{/each}}


<div class="card">

    <div class="card-body">

        <h4>Nova postagem:</h4>

        <form action="/admin/postagens/nova" method="POST">

            <label for="titulo">Título:</label>
            <input class="form-control" type="text" name="nome_titulo" placeholder="Digite um título ..." required>

            <label for="slug">Slug:</label>
            <input class="form-control" type="text" name="nome_slug" placeholder="Digite um slug ... " required>

            <label for="descricao">Descrição:</label>
            <input class="form-control" type="text" name="nome_Descricao" placeholder="Descrição da postagem ..." required>

            <label for="conteudo">Conteúdo:</label>
            <textarea class="form-control " name="nome_conteudo"></textarea>

            <label for="categoria">Categoria:</label>
            <select name="categoria" class="form-control colorful-select dropdown-secondary">
                
                
                
                <label class="mdb-main-label">Selecione a categoria ... </label>
                
                {{#each categorias}}
                    
                    <option value="{{_id}}">  
                    
                        {{nome}} 
                    
                    </option>
                
                {{else}}

                    <option value="0"> Nenhuma categoria cadastrada </option>

                {{/each}}
            
            </select>

            <button class="btn btn-outline-info mt-4"> Criar postagem </button>


        </form>

    </div>
</div>